<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:backgroundTint="@color/purple_200"
        android:onClick="showToastMessage"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Toast"/>

    <TextView
        android:id="@+id/tvContador"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="150sp"
        android:background="#EFD809"
        android:textColor="@color/purple_700"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btToast"
        app:layout_constraintBottom_toTopOf="@id/btCount"/>

    <Button
        android:id="@+id/btCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Count"
        android:textSize="50dp"
        android:onClick="goAcount"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>